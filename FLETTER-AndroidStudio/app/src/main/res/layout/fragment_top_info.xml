<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/banner" />

        <TextView
            android:id="@+id/txtImgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgInfo"

            android:layout_alignTop="@+id/imgInfo"
            android:layout_alignRight="@+id/imgInfo"
            android:layout_alignBottom="@+id/imgInfo"
            android:layout_centerInParent="true"

            android:fontFamily="@font/gowun_dodum"
            android:gravity="bottom|center"
            android:letterSpacing="0.04"
            android:paddingLeft="20dp"
            android:text="좋은 꽃과 함께 일상의 행복을\n전하고 싶은 FLETTER 입니다."
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="normal"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txtInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgInfo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gowun_dodum"
            android:text="주소"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtInfo1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gowun_dodum"
            android:text="인천광역시 서구 심곡동 303-1 4층, 5층"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtInfo2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gowun_dodum"
            android:text="연락처 : 032-000-0000"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gowun_dodum"
            android:text="영업시간 : 매일 08:00 ~ 20:00"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gowun_dodum"
            android:text="@string/navigation"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:padding="120dp"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_animation" />

</FrameLayout>